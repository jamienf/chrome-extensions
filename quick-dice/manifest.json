{
  "manifest_version": 3,
  "name": "Quick Dice",
  "version": "1.0",
  "description": "A Chrome extension for quick dice results.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}