{
  "manifest_version": 3,
  "name": "Tab Cleanup Tool",
  "version": "1.0",
  "description": "Group tabs by domain, close duplicates, and save tab lists before closing.",
  "permissions": ["tabs", "tabGroups", "storage", "activeTab", "bookmarks"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "icons": {
    "128": "images/icon.png"
  }
}

